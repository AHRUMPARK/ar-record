<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>회원가입</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>

    <style>
        body {
            margin: 0;
            padding: 0;
            background: black;
            height: 100vh;


        }

        .center {
            position: absolute;
            top: 70%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 400px;
            background: black;
            border-radius: 10px;
        }

        .center h1 {
            color: white;
            text-align: center;
            padding: 0 0 20px 0;

        }


        form .txt_field {
            position: relative;
            margin: 30px 0;

        }

        .txt_field input {
            width: 100%;
            height: 50px;
            font-size: 16px;
            background-color: #353535;
            border: none;
        }

        .txt_field label {
            position: absolute;
            top: 50%;
            left: 5px;
            color: #adadad;
            transform: translateY(-50%);
            font-size: 16px;
            pointer-events: none;
            transition: .5s;
        }



        .pass {
            margin: -5px 0 20px 5px;
            color: #a6a6a6;
            cursor: pointer;
            text-align: center;
            padding-bottom: 30px;
        }


        #check_id {
            width: 20%;
            height: 30px;
            border: 1px;
            background: #380052;
            font-size: 15px;
            font-weight: 500;
            cursor: pointer;
        }

        #singup_bt2 {
            width: 100%;
            height: 50px;
            border: 1px solid;
            background: black;
            font-size: 18px;
            font-weight: 700;
            cursor: pointer;
            outline: none;
        }

        .form {
            padding-bottom: 20px;
        }


        .form-check {
            padding-bottom: 30px;
        }



        #check_email {
            width: 20%;
            height: 30px;
            border: 1px;
            background: #380052;
            font-size: 15px;
            font-weight: 500;
            cursor: pointer;

        }

        .form_check_all {
            margin-top: 50px;
        }
    </style>
</head>

<body>
    <div class="center">
        <h1>회원가입</h1>
        <form id="signup_info">
            <div class="txt_field mb-3">
                <input type="text" class="form-control" name="id" placeholder="아이디를 입력해주세요">
            </div>
            <div class="txt_field mb-3">
                <input type="submit" value="중복체크" style="color:white;" name="check_id">
            </div>

            <div class="txt_field">
                <input type="text" class="form-control" name="name" placeholder="닉네임을 입력해주세요">
            </div>

            <div class="txt_field">
                <input type="password" class="form-control" name="pw" placeholder="비밀번호를 입력해주세요">
            </div>

            <div class="txt_field">
                <input type="password" class="form-control" name="rePw" placeholder="비밀번호를 한번 더 입력해주세요">
            </div>

            <div class="txt_field">
                <input type="text" class="form-control" name="e_mail" placeholder="이메일을 입력해주세요">
            </div>
            <input type="submit" value="중복체크" style="color:white;;" id="check_id">


            <div class="form_check_all">
                <div class="form-check" style="color:white;">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        전체 동의 합니다.
                    </label>
                </div>

                <div class="form-check" style="color:white;">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault2">
                    <label class="form-check-label" for="flexCheckDefault2">
                        이용 약관 동의
                    </label>
                </div>

                <div class="form-check" style="color:white;">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault3">
                    <label class="form-check-label" for="flexCheckDefault2">
                        개인 정보 수집 이용 동의
                    </label>
                </div>
            </div>

            <div class="form">

                <button type="button" style="color:white; margin-bottom: 20px;" id="singup_bt2"
                    onclick="register()">회원가입</button>
            </div>
        </form>
    </div>

</body>
<script>
    function register() {
        var form = document.getElementById('signup_info');
        let user = {
            id: form.id.value,
            name: form.name.value,
            pw: form.pw.value,
            rePw: form.rePw.value,
            e_mail: form.e_mail.value
        }
        if (user.pw == user.rePw) {
            axios({
                method: 'post',
                url: '/signup',
                data: user
            })
                .then((response) => {
                    return response.data;
                })
                .then((data) => {
                    alert('회원가입 성공');
                    window.location.href="/";
                });
        } else {
            alert('비밀번호가 맞지 않습니다.');
        }
    }
</script>

</html>