<script>
    function register() {
        var form = document.getElementById('signup_info');
        let user = {
            id: form.id.value,
            name: form.name.value,
            pw: form.pw.value,
            rePw: form.rePw.value,
            e_mail: form.e_mail.value
        }
        if (user.pw == user.rePw) {
            axios({
                method: 'post',
                url: '/signup',
                data: user
            })
                .then((response) => {
                    return response.data;
                })
                .then((data) => {
                    alert('회원가입 성공');
                    document.location.href = "./login";
                });
        } else {
            alert('비밀번호가 맞지 않습니다.');
        }
    }

</script>


