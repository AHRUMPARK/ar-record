        form .txt_field {
            position: relative;
            margin: auto;

        }

        .txt_field input {
            width: 100%;
            height: 50px;
            font-size: 16px;
            background-color: #353535;
            border: none;
        }

        .txt_field label {
            position: absolute;
            top: 50%;
            left: 5px;
            color: #adadad;
            transform: translateY(-50%);
            font-size: 16px;
            pointer-events: none;
            transition: .5s;
        }

