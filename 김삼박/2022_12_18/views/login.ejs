<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>login</title>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>

    <style>
        body {
            margin: 0;
            padding: 0;
            background: black;
            height: 100vh;
        }

        .center {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 400px;
            background: black;
            border-radius: 10px;
        }

        .center h1 {
            color: white;
            text-align: center;
            padding: 0 0 20px 0;

        }


        form .txt_field {
            position: relative;
            margin: 30px 0;

        }

        .txt_field input {
            width: 100%;
            height: 50px;
            font-size: 16px;
            background-color: #353535;
            border: none;
        }

        .txt_field label {
            position: absolute;
            top: 50%;
            left: 5px;
            color: #adadad;
            transform: translateY(-50%);
            font-size: 16px;
            pointer-events: none;
            transition: .5s;
        }



        .pass {
            margin: -5px 0 20px 5px;
            color: #a6a6a6;
            cursor: pointer;
            text-align: center;
            padding-bottom: 30px;
        }


        #login_bt {
            width: 100%;
            height: 50px;
            border: 1px;
            background: #380052;
            font-size: 18px;
            font-weight: 700;
            cursor: pointer;
            outline: none;
        }

        #singup_bt {
            width: 100%;
            height: 50px;
            border: 1px solid;
            background: black;
            font-size: 18px;
            font-weight: 700;
            cursor: pointer;
            outline: none;
        }

        .form {
            padding-bottom: 30px;
        }

        .form-check {
            padding-bottom: 30px;
        }
    </style>
</head>
<body>
    <div class="center">
        <h1>로그인</h1>
        <form id="form_info">
            <div class="txt_field mb-3">
                <input type="text" class="form-control" name="id" placeholder="아이디">
                <label for="floatingInput"></label>
            </div>
            <div class="txt_field">
                <input type="password" class="form-control" name="pw" placeholder="비밀번호">
                <label for="floatingPassword"></label>
            </div>

            <div class="form">
                <button type="button" style="color:white;"  id="login_bt" onclick="user_login()">로그인</button>
                <!-- <input type="submit" value="로그인" style="color:white;" id="login_bt"> -->
            </div>

            <button type="button" style="color:white; margin-bottom: 20px;" id="singup_bt"><a href="/signup">회원가입</a></button>
            <!-- <input type="submit" value="회원가입" style="color:white; margin-bottom: 20px;" id="singup_bt"> -->
            <div class="signup_link">
            </div>
        </form>
    </div>
</body>
<script>
    function user_login(){
        var form = document.getElementById('form_info');
        
        let user = {
            id : form.id.value,
            pw : form.pw.value
        }
        axios ({
            method : 'post',
            url : '/signin',
            data : user
        }).then((response)=>{
            console.log(response);
            if( response.data == true ){
                alert('로그인 성공');
                //main페이지 연결
                window.location.href="/";
            }
            else {
                alert('로그인 실패');
                form.reset();
            }
        })

    }
</script>

</html>