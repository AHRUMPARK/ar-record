<body>
    메인페이지 입니다.
        <div id="msg"></div>
        <nav class="navbar bg-light">
            <!-- 메인페이지 로그인, 로그아웃 버튼 = default-btn -->
            <form id="form_info" class="container-fluid justify-content-start"  style="display: block; margin-left: 25px;">
                <div id="default-btn" style="margin-left: 40px; margin-bottom: 10px;">
                    <button class="btn btn-sm btn-outline-secondary" type="button"><a href="/login">로그인</a></button>
                    <button class="btn btn-sm btn-outline-secondary" type="button"><a href="/signup">회원가입</a></button>
                </div>
            <!-- 로그아웃 = logout-btn -->
            <div id="logout-btn" class="d-none">
                <button class="btn btn-outline-success me-2" type="button" onclick="user_logout()">로그아웃</button>
                <button class="btn btn-outline-success me-2" type="button"><a href="/mypage">마이페이지</a></button>
                <button class="btn btn-outline-success me-2" type="button"><a href="/Edit_info">회원정보 수정</a></button>
            </div>
            </form>
          </nav>

</body>
    <script>
        // 로그인값 true => 기본 버튼 가리고 / 로그아웃 버튼 보임
        if ("<%=isLogin%>" == "true"){
        $('#default-btn').addClass("d-none");
        $("#logout-btn").removeClass("d-none");
        }

        function user_logout(){
            var form = document.getElementById('form_info');
            axios ({
                method : 'delete',
                url : '/logout',
            })
            .then(()=>{
                alert('로그아웃 하셨습니다.');
                window.location.href="/"; 
            });
        }   
    </script>
</html>