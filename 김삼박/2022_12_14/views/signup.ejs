            font-size: 18px;
            font-weight: 700;
            cursor: pointer;
            outline: none;
        }

        .form {
            padding-bottom: 20px;
        }


        .form-check {
            padding-bottom: 30px;
        }



        #check_email {
            width: 20%;
            height: 30px;
            border: 1px;
            background: #380052;
