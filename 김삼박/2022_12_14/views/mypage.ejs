<body>
    <div class="form_outline"></div>
    <div class="mypage_all">
        <div class="mypage_title">
            <p>My page</p>
        </div>

        <div class="my_container">
            <div class=>
                <form class="mypage Information"  id="profile_info">
                   
                        <input type="file" name="userfile" style="display:none;" id="userfile"  onchange="loadFile(this)">
                        <button type="button" class="btn btn-primary btn-sm" id="upload_file">프로필 변경</button>

                    <div class="nickname">
                        <div><%=data.name%></div>
                        <div class="user_poto"><img src="../static/img/1.jpg"></div>
            </div>
            </form>
        
</body>
<script>
    $('#upload_file').on('click', function(){
        $('#userfile').trigger('click');

        var form = document.getElementById('profile_info');
        var formData = new FormData(form);

        axios({
            method : 'post',
            url : '/upload_file',
            data : { formData },
            headers : {
                'Content-Type': 'multipart/form-data'
            }
        })
        .then((a) => { return a.data ; })
        .then((reuslt) => {
            document.querySelector('img').src = reuslt.path;
        });
    });

    
</script>

